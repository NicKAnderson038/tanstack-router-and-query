{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* import paths */
    "paths": {
     
      "@common": ["./src/components/common/_index.ts"],
      "@integrations": ["./src/integrations/_index.ts"],
      "@services": ["./src/services/_index.ts"],
      "@shared": ["./src/components/shared/_index.ts"],
      "@types-def": ["./src/types/_index.ts"],
      "@utils": ["./src/utils/_index.ts"],
    }
  }
}
